@model Controle_De_OS.Models.Tecnico

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novo</h1>

<h4>Tecnico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nome" class="control-label"></label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="registro" class="control-label"></label>
                <input asp-for="registro" class="form-control" />
                <span asp-validation-for="registro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idprocedimento" class="control-label"></label>
                <select asp-for="Idprocedimento" class ="form-control" asp-items="ViewBag.Idprocedimento"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
